<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="370.0" prefWidth="401.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddOrEditItemScreenController">
   <children>
      <TextField fx:id="itemNameTextField" layoutX="45.0" layoutY="119.0" onKeyTyped="#onNameTextFieldTyped" prefHeight="25.0" prefWidth="310.0" promptText="Enter Item Name" />
      <Label fx:id="addOrEditLabel" layoutX="73.0" layoutY="22.0" text="Add or Edit Item">
         <font>
            <Font name="Segoe UI Semibold" size="34.0" />
         </font>
      </Label>
      <TextField fx:id="itemQuantityTextField" layoutX="45.0" layoutY="185.0" onKeyTyped="#onQuantityTextFieldTyped" prefHeight="25.0" prefWidth="310.0" promptText="Enter Item Quantity" />
      <TextField fx:id="itemPriceTextField" layoutX="45.0" layoutY="251.0" onKeyTyped="#onPriceTextFieldTyped" prefHeight="25.0" prefWidth="310.0" promptText="Enter Item Price" />
      <Button fx:id="addOrUpdateButton" layoutX="78.0" layoutY="307.0" mnemonicParsing="false" onAction="#onClickAddOrUpdate" prefHeight="34.0" prefWidth="150.0" style="-fx-background-color: #009aff;" text="Add or Update" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Label fx:id="cancelLabel" layoutX="252.0" layoutY="311.0" onMouseClicked="#onClickCancelButton" text="Cancel">
         <font>
            <Font name="Segoe UI Semilight" size="18.0" />
         </font>
      </Label>
      <Label fx:id="notificationLabel" layoutX="46.0" layoutY="72.0" prefHeight="30.0" prefWidth="310.0" textFill="RED">
         <font>
            <Font name="Segoe UI Light" size="20.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="89.0" text="Name:">
         <font>
            <Font name="Segoe UI Light" size="18.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="157.0" text="Quantity:">
         <font>
            <Font name="Segoe UI Light" size="18.0" />
         </font>
      </Label>
      <Label layoutX="45.0" layoutY="223.0" text="Price:">
         <font>
            <Font name="Segoe UI Light" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
